<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item>
            <shape>
                <stroke
                    android:width="1dp"
                    android:color="@color/coloGray"
                    android:dashWidth="1dp"
                    android:dashGap="0dp"
                    />

                <solid android:color="@color/colorWhite"/>

                <corners android:radius="1dp" />

                <padding
                    android:bottom="10dp"
                    android:top="10dp" />
            </shape>
        </item>
        <item
            android:drawable="@drawable/ic_arrow_drop_down_gray_24dp"
            android:gravity="right"
            android:left="@android:dimen/app_icon_size">
        </item>
    </layer-list></item>

</selector>